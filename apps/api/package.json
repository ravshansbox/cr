{
  "name": "@cloudretail/api",
  "version": "1.0.0",
  "type": "module",
  "exports": "./src/exports.ts",
  "scripts": {
    "build": "tsc --outDir dist",
    "checktypes": "tsc --noEmit",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down",
    "lint": "eslint --fix .",
    "migrate:up": "dotenv -c npx pg-migrate up",
    "migrate:down": "dotenv -c npx pg-migrate down",
    "start": "dotenv -c npx tsx watch --clear-screen=false src/index.ts",
    "test": "dotenv -c npx vitest"
  },
  "dependencies": {
    "@ravshansbox/pg-migrate": "^0.1.0",
    "@ts-safeql/sql-tag": "^0.2.1",
    "find-my-way": "^9.2.0",
    "nodemailer": "^6.10.0",
    "path-to-regexp": "^8.2.0",
    "pg": "^8.14.0",
    "remeda": "^2.21.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@ts-safeql/eslint-plugin": "^3.6.8",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "dotenv-cli": "^8.0.0",
    "prettier-plugin-sql": "^0.18.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  }
}
